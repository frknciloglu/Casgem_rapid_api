@model List<BookingViewModel.Result>

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<div>

    <form method="post">
        <div class="d-flex flex-column justify-content-center align-content-center m-auto w-50 border-1 box-shadow">
            <div class="d-flex p-1 m-1">
                <input type="text" name="adult" class="form-control p-1" style="margin-right:5px" placeholder="Yetişkin Sayısı" />
                <input type="text" name="child" class="form-control p-1" placeholder="çocuk sayısı" />
            </div>
            <div class="d-flex p-1 m-1">
                <input type="text" name="checkinDate" class="form-control p-1" style="margin-right:5px" placeholder="Giriş tarihi" />
                <input type="text" name="checkoutDate" class="form-control p-1" placeholder="Çıkış Tarihi" />
            </div>
            <div class="d-flex p-1 m-1">
                <input type="text" name="roomNumber" class="form-control p-1" style="margin-right:5px" placeholder="oda Sayısı" />
                <input type="text" name="cityId" class="form-control p-1" placeholder="Şehir Id" />
            </div>
            <button class="btn btn-warning w-100px m-auto d-flex text-center p-1 m-1">Otel Ara</button>

        </div>



    </form>

    <table class="table table-hover">
        @foreach (var item in Model)
        {
            <tr>
                <th>

                    @item.name
                </th>
            </tr>
        }
    </table>
</div>


